/* components/relevant-recommend/relevant-recommend.wxss */
.re-pad {
  padding: 30rpx;
}

.relevant {
  width: 750rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.relevant .re-box {
  width: 220rpx;
  margin-bottom: 20rpx;
}

.relevant .re-box:nth-child(3n) {
  margin-right: 40rpx;
}

.relevant .re-title {
  width: 200rpx;
  font-size: 28rpx;
}

.relevant .re-author {
  padding-top: 20rpx;
  padding-bottom: 30rpx;
  font-size: 20rpx;
  color: rgb(112, 112, 112);
}

