.details {
  padding: 30rpx;
  display: flex;
}
.details .rightbox {
  padding-left: 20rpx;
}
.details .rightbox .title {
  width: 458rpx;
  margin-bottom: 10rpx;
  font-size: 40rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.details .rightbox .score {
  padding: 10rpx 0rpx;
  color: gray;
  display: flex;
  align-items: flex-end;
  font-size: 30rpx;
}
.details .rightbox .score .scoreson {
  font-size: 40rpx;
  color: gold;
}
.details .rightbox .score .icon {
  margin: 0 10rpx;
}
.details .rightbox .score .tip {
  margin-left: 10rpx;
  font-size: 30rpx;
}
.details .rightbox .author {
  padding: 10rpx 0rpx;
  font-size: 30rpx;
  color: gray;
}
.details .rightbox .author .authorson {
  font-size: 36rpx;
  color: red;
}
.details .rightbox .wordCount {
  font-size: 30rpx;
  color: gray;
}
.jianjie {
  padding: 50rpx 30rpx;
}
.jianjie .jianjiebox {
  display: flex;
  justify-content: space-between;
}
.jianjie .jianjiebox .txt {
  font-size: 42rpx;
  padding-bottom: 20rpx;
}
.jianjie .jianjiebox .fontsize {
  font-size: 34rpx;
  color: #8b8b8b;
}
.jianjie .iongin {
  font-size: 36rpx;
  color: #8b8b8b;
}
.jianjie .longintro {
  height: 145rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}
.hot {
  padding: 0rpx 30rpx;
  font-size: 42rpx;
  padding-bottom: 20rpx;
}
.hots {
  padding: 30rpx;
  padding-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.hots .hots-txt {
  font-size: 42rpx;
}
.hots .hots-txt2 {
  font-size: 30rpx;
  color: #747474;
}
.shuju {
  display: flex;
  justify-content: space-around;
  color: gray;
  font-size: 24rpx;
  text-align: center;
}
.shuju .too {
  margin-bottom: 10rpx;
  font-size: 36rpx;
  text-align: center;
  color: #3f3e3e;
}
.bookinfo {
  padding: 30rpx;
  margin-bottom: 100rpx;
}
.bookinfo .tushu {
  font-size: 42rpx;
  padding-bottom: 20rpx;
}
.bookinfo .copy {
  font-size: 36rpx;
  color: #5e5e5e;
}
.btn {
  width: 750rpx;
  position: fixed;
  bottom: 0rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  display: flex;
  justify-content: space-around;
  border-top: 2rpx solid #f1eded;
  background-color: white;
}
.btn .btn-one {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: orangered;
  background-color: #ffc4a8;
  border-radius: 40rpx;
  font-size: 30rpx;
}
.btn .btn-del {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #ffffff;
  background-color: #838383;
  border-radius: 40rpx;
  font-size: 30rpx;
}
.btn .btn-two {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: white;
  background-color: red;
  border-radius: 40rpx;
  font-size: 30rpx;
}
